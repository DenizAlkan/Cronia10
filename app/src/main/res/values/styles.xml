<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




        <style name="TextStyle">
            <item name="android:textSize">23.7sp</item>
            <item name="android:letterSpacing">0.08</item>
            <item name="android:lineSpacingMultiplier">1.41</item>
            <item name="android:textColor">@color/white</item>
        </style>
        <style name="TextStyle5">
            <item name="android:textSize">18.7sp</item>
            <item name="android:letterSpacing">0.06</item>
            <item name="android:textColor">@color/warm_grey</item>
        </style>
        <style name="TextStyle2">
            <item name="android:textSize">17.3sp</item>
            <item name="android:letterSpacing">0.06</item>
